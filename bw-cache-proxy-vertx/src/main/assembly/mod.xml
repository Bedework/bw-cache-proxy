<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>mod</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <!--
  <fileSets>
    <fileSet>
      <outputDirectory></outputDirectory>
      <directory>${mods.directory}/${module.name}</directory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
  </fileSets>
  -->

    <fileSets>
        <!-- The embedded api factory class which also starts the service -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>vertx/mods/${module.name}/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/provided</directory>
            <outputDirectory>vertx/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <outputDirectory>vertx/mods/${module.name}</outputDirectory>
            <directory>${mods.directory}/${module.name}</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <!-- vertx -->
        <file>
            <source>src/main/resources/vertx</source>
            <outputDirectory>vertx/bin</outputDirectory>
            <fileMode>755</fileMode>
        </file>

        <!-- vertx.bat -->
        <file>
            <source>src/main/resources/vertx.bat</source>
            <outputDirectory>vertx/bin</outputDirectory>
        </file>

        <!-- conf directory -->
        <file>
            <source>src/main/config/bw-cache-proxy-vertx.conf</source>
            <outputDirectory>vertx/conf</outputDirectory>
            <destName>cache.conf</destName>
        </file>

        <file>
            <source>src/main/config/cluster.xml</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <file>
            <source>src/main/config/ehcache.xml</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <file>
            <source>src/main/config/langs.properties</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <file>
            <source>src/main/config/logging.properties</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <file>
            <source>src/main/config/repos.txt</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <!-- log4j.xml -->
        <file>
            <source>src/main/resources/log4j.xml</source>
            <outputDirectory>vertx/conf</outputDirectory>
        </file>

        <!-- mod.json -->
        <file>
            <source>src/main/resources/mod.json</source>
            <outputDirectory>vertx/mods/${module.name}</outputDirectory>
        </file>
    </files>
</assembly>

